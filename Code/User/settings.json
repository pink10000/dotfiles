{
    "security.workspace.trust.untrustedFiles": "open",
    "files.autoSave": "afterDelay",
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false
    },
    "[ini]": {},
    // berkeley mono fix later
    "editor.fontFamily": "'Berkeley Mono', 'Droid Sans Mono', 'monospace', 'LiterationMono Nerd Font Propo'",
    "editor.minimap.enabled": false,
    //"editor.renderWhitespace": "all",
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "%DOCFILE%.bbl",
        "%DOCFILE%.blg",
        "%DOCFILE%.idx",
        "%DOCFILE%.ind",
        "%DOCFILE%.lof",
        "%DOCFILE%.lot",
        "%DOCFILE%.out",
        "%DOCFILE%.toc",
        "%DOCFILE%.acn",
        "%DOCFILE%.acr",
        "%DOCFILE%.alg",
        "%DOCFILE%.glg",
        "%DOCFILE%.glo",
        "%DOCFILE%.gls",
        "%DOCFILE%.fls",
        "%DOCFILE%.log",
        "%DOCFILE%.fdb_latexmk",
        "%DOCFILE%.snm",
        "%DOCFILE%.synctex(busy)",
        "%DOCFILE%.synctex.gz(busy)",
        "%DOCFILE%.nav",
        "%DOCFILE%.vrb"
    ],
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "workbench.panel.defaultLocation": "bottom",
    //
    "editor.fontVariations": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.wordWrap": "on",
    "editor.fontLigatures": false,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.stickyScroll.enabled": false,
    "workbench.layoutControl.enabled": false,
    "window.title": "${dirty}${activeEditorShort}",
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.editorAssociations": {
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "workbench.activityBar.iconClickBehavior": "focus",
    "editor.hideCursorInOverviewRuler": false,
    "editor.scrollbar.verticalScrollbarSize": 10,
    "problems.showCurrentInStatus": true,
    "[latex]": {
        "editor.defaultFormatter": "nickfode.latex-formatter"
    },
    "files.associations": {
        "*.rmd": "markdown"
    },
    "git.autofetch": true,
    "jupyter.askForKernelRestart": false,
    "window.menuBarVisibility": "hidden", // ALWAYS KEEP HIDDEN !
    "window.enableMenuBarMnemonics": false,
    "window.zoomLevel": 2,
    "breadcrumbs.enabled": false,
    "notebook.lineNumbers": "on",
    "latex-workshop.view.pdf.color.dark.backgroundColor": "#000000",
    "latex-workshop.view.pdf.color.light.backgroundColor": "",
    "latex-workshop.view.pdf.color.dark.pageBorderColor": "#000000",
    "latex-workshop.view.pdf.color.dark.pageColorsForeground": "#000000",
    "latex-workshop.view.pdf.color.dark.pageColorsBackground": "#000000",
    "latex-workshop.view.pdf.invert": 0.92,
    "workbench.iconTheme": "material-icon-theme",
    "notebook.output.scrolling": true,
    "remote.SSH.showLoginTerminal": true,
    "remote.SSH.useLocalServer": false,
    "remote.SSH.configFile": "~/.ssh/config",
    "remote.SSH.connectTimeout": 60,
    "workbench.startupEditor": "none",
    "remote.SSH.remotePlatform": {
        "ieng6.ucsd.edu": "linux"
    },
    "haskell.manageHLS": "GHCup",
    "apc.stylesheet": {
        // ".editor-group-watermark > .letterpress": "background-image: url(https://raw.githubusercontent.com/Aikoyori/ProgrammingVTuberLogos/main/VSCode/VSCode.png) !important; width: unset !important; height: 250px; aspect-ratio: 16/9 !important; filter: drop-shadow(5px 5px 5px #222); margin-bottom: 2rem;",
        ".editor-group-watermark > .letterpress": "width: unset !important; height: 250px; aspect-ratio: 16/9 !important; filter: drop-shadow(5px 5px 5px #FFFFFF); margin-bottom: 2rem;",
        ".editor-group-container.editor-group-top.active": "background: #00000040 !important",
        // Sidebar
        ".sidebar .title-label": "visibility: hidden; padding: 0 !important", // Hide the title of the sidebar
        ".sidebar": "padding: 0 !important; border: none !important",
        ".monaco-list .monaco-list-rows": "background: #00000000 !important",
        ".monaco-scrollable-element": "background: #00000000 !important",
        // Tab Bar
        ".title.tabs.show-file-icons": "background: #000000B0 !important",
        ".tab.close-action-off.sizing-fit.has-icon.tab-border-bottom.tab-border-top": "background: #00000000 !important; font-weight: bold !important", // tab bar
        // ".label-name": "font-weight: bold !important",
        ".tab.close-action-off.sizing-fit.has-icon": "background: #00000000 !important",
        // Terminal
        ".part.panel.basepanel.bottom.pane-composite-part": "background: #000000D5 !important",
        "xterm-viewport": "background: #00000000 !important",
        ".terminal-outer-container": "background: #00000000 !important",
        ".terminal.xterm": "background: #00000000 !important",
    },
    "apc.font.family": "Berkeley Mono",
    "apc.monospace.font.family": "Berkeley Mono",
    "window.titleBarStyle": "native",
    "apc.electron": {
        "titleBarStyle": "hidden",
        "transparent": true,
        "backgroundColor": "#00000000"
    },
    "apc.activityBar": {
        "size": 30,
        "itemSize": 30,
        "itemMargin": 0,
        "position": "bottom"
    },
    "apc.statusBar": {
        "position": "top",
        "height": 22,
    },
    "apc.listRow": {
        "lists": [
            "explorer-folders-view",
            "quick-input-list",
            "results",
        ],
        "height": 20, // changes how tall the list items in file explorer
    },
    "window.density.editorTabHeight": "compact",
    "animations.Install-Method": "Apc Customize UI++",
    "apc.imports": [
        "file://${userHome}/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.2/dist/updateHandler.js"
    ],
    "animations.CursorAnimationOptions": {
        "CursorStyle": "line",
        "TrailLength": 8
    },
    "animations.Scrolling": "None",
    "animations.Tabs": "None",
    "workbench.activityBar.location": "top",
    "workbench.sideBar.location": "left",
    "redhat.telemetry.enabled": false,
    "workbench.colorTheme": "Barbie Theme",
    "workbench.colorCustomizations": {
        "editor.background": "#00000050",
        "sideBar.background": "#000000D0",
        "editorGutter.background": "#00000050",
        "terminal.background": "#00000030",
    },
    "workbench.statusBar.visible": false,
    "update.mode": "manual",
    "animations.Active": "Indent",
    "animations.Command-Palette": "Slide",
    "window.customTitleBarVisibility": "never",
    "terminal.integrated.tabs.location": "left",
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.showActions": "always",
    "terminal.integrated.smoothScrolling": true,
    "terminal.explorerKind": "both",
    "terminal.integrated.defaultProfile.linux": "fish",
    "terminal.integrated.tabs.hideCondition": "never",
}