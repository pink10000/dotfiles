{
    "security.workspace.trust.untrustedFiles": "open",
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false
    },
    "[ini]": {},
    // berkeley mono fix later
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Droid Sans Mono', 'monospace', 'LiterationMono Nerd Font Propo'",
    "editor.minimap.enabled": false,
    //"editor.renderWhitespace": "all",
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.fls",
        "%DOCFILE%.bbl",
        "%DOCFILE%.blg",
        "%DOCFILE%.idx",
        "%DOCFILE%.ind",
        "%DOCFILE%.lof",
        "%DOCFILE%.lot",
        "%DOCFILE%.out",
        "%DOCFILE%.toc",
        "%DOCFILE%.acn",
        "%DOCFILE%.acr",
        "%DOCFILE%.alg",
        "%DOCFILE%.glg",
        "%DOCFILE%.glo",
        "%DOCFILE%.gls",
        "%DOCFILE%.fls",
        "%DOCFILE%.log",
        "%DOCFILE%.fdb_latexmk",
        "%DOCFILE%.snm",
        "%DOCFILE%.synctex(busy)",
        "%DOCFILE%.synctex.gz(busy)",
        "%DOCFILE%.nav",
        "%DOCFILE%.vrb"
    ],
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "workbench.panel.defaultLocation": "bottom",
    //
    "editor.fontVariations": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.wordWrap": "on",
    "editor.fontLigatures": false,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.stickyScroll.enabled": false,
    "workbench.layoutControl.enabled": false,
    "window.title": "${dirty}${activeEditorShort}",
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.editorAssociations": {
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "workbench.activityBar.iconClickBehavior": "focus",
    "editor.hideCursorInOverviewRuler": false,
    "editor.scrollbar.verticalScrollbarSize": 10,
    "problems.showCurrentInStatus": true,
    "[latex]": {
        "editor.defaultFormatter": "nickfode.latex-formatter"
    },
    "files.associations": {
        "*.rmd": "markdown"
    },
    "git.autofetch": true,
    "jupyter.askForKernelRestart": false,
    "window.menuBarVisibility": "hidden", // ALWAYS KEEP HIDDEN !
    "window.enableMenuBarMnemonics": false,
    "window.zoomLevel": 2,
    "breadcrumbs.enabled": false,
    "notebook.lineNumbers": "on",
    "latex-workshop.view.pdf.color.light.pageBorderColor": "#181818",
    "latex-workshop.view.pdf.color.light.pageColorsForeground": "#181818",
    "latex-workshop.view.pdf.color.dark.backgroundColor": "#181818",
    "latex-workshop.view.pdf.color.light.backgroundColor": "#181818",
    "latex-workshop.view.pdf.color.dark.pageBorderColor": "#181818",
    "latex-workshop.view.pdf.color.dark.pageColorsForeground": "#181818",
    "latex-workshop.view.pdf.color.dark.pageColorsBackground": "#181818",
    "latex-workshop.view.pdf.color.light.pageColorsBackground": "#181818",
    "workbench.iconTheme": "material-icon-theme",
    "notebook.output.scrolling": true,
    "remote.SSH.showLoginTerminal": true,
    "remote.SSH.useLocalServer": false,
    "remote.SSH.configFile": "~/.ssh/config",
    "remote.SSH.connectTimeout": 60,
    "workbench.startupEditor": "none",
    "remote.SSH.remotePlatform": {
        "ieng6.ucsd.edu": "linux",
        "192.168.15.232": "linux",
        "dsmlp-login.ucsd.edu": "linux",
        "vscode-dsmlp": "linux"
    },
    "haskell.manageHLS": "GHCup",
    // "editor.rulers": [
    //     80,
    // ],
    "apc.stylesheet": {
        // ".editor-group-watermark > .letterpress": "background-image: url(https://raw.githubusercontent.com/Aikoyori/ProgrammingVTuberLogos/main/VSCode/VSCode.png) !important; width: unset !important; height: 250px; aspect-ratio: 16/9 !important; filter: drop-shadow(5px 5px 5px #222); margin-bottom: 2rem;",
        ".editor-group-watermark > .letterpress": "width: unset !important; height: 250px; aspect-ratio: 16/9 !important; filter: drop-shadow(5px 5px 5px #FFFFFF); margin-bottom: 2rem;",
        ".editor-group-container.editor-group-top.active": "background: #00000040 !important",
        // Sidebar
        ".sidebar .title-label": "padding: 0 !important", // Hide the title of the sidebar
        ".sidebar": "padding: 0 !important; border: none !important",
        ".composite.title": "background: #00000000 !important;",
        // Sidebar Content
        ".monaco-list .monaco-list-rows": "background: #00000000 !important",
        ".monaco-scrollable-element": "background: #00000000 !important",
        // Tab Bar
        ".title.tabs.show-file-icons": "background: #00000000 !important",
        ".tabs-and-actions-container": "background: #000000A9 !important",
        ".tab.close-action-off.sizing-fit.has-icon.tab-border-bottom.tab-border-top": "background: #00000000 !important; font-weight: bold !important", // tab bar
        // ".label-name": "font-weight: bold !important",
        ".tab.close-action-off.sizing-fit.has-icon": "background: #00000000 !important",
        ".content.auxiliary .inline-tabs-placeholder, .no-custom-title-bar-visibility div.monaco-workbench .has-composite-bar, .no-activity-bar.nosidebar:not(.sidebar-right):not(.fullscreen) .inline-tabs-placeholder, .inline-title-bar.horizontal-activitybar .nosidebar:not(.sidebar-right).noeditorarea.monaco-workbench .part.panel.bottom .composite.title, .inline-title-bar .sidebar-right.noauxiliarybar.noeditorarea.monaco-workbench .part.panel.bottom .composite.title, .inline-title-bar:not(.statusbar-top) .monaco-workbench.mac:not(.fullscreen) .auxiliarybar.left .composite.title, .inline-title-bar.statusbar-editor-top:not(.horizontal-activitybar) .monaco-workbench.mac.no-activity-bar.nosidebar:not(.sidebar-right):not(.fullscreen) .statusbar": "padding-left: 4px !important",
        // Terminal
        ".part.panel.basepanel.bottom.pane-composite-part": "background: #000000D5 !important",
        "xterm-viewport": "background: #00000000 !important",
        ".terminal-outer-container": "background: #00000000 !important",
        ".terminal.xterm": "background: #00000000 !important",
        ".split-view-view visible": "display: none !important",
        // ".vscode-dark": "background: #000000D5 !important",
    },
    "apc.font.family": "JetBrainsMono Nerd Font",
    "apc.monospace.font.family": "JetBrainsMono Nerd Font",
    "window.titleBarStyle": "native",
    "apc.electron": {
        "titleBarStyle": "hidden",
        "transparent": true, 
        "backgroundColor": "#000000"
    },
    "apc.activityBar": {
        "size": 30,
        "itemSize": 30,
        "itemMargin": 0,
        "position": "bottom"
    },
    "apc.statusBar": {
        "position": "bottom",
        "height": 22,
    },
    "apc.listRow": {
        "lists": [
            "explorer-folders-view",
            "quick-input-list",
            "results",
        ],
        "height": 20, // changes how tall the list items in file explorer
    },
    "window.density.editorTabHeight": "compact",
    "workbench.activityBar.location": "top",
    "workbench.sideBar.location": "left",
    "redhat.telemetry.enabled": false,
    "workbench.colorCustomizations": {
        // "editor.background": "#00000040",
        "sideBar.background": "#000000C0",
        "editorGutter.background": "#00000040",
        "terminal.background": "#00000000",
    },
    "update.mode": "manual",
    "window.customTitleBarVisibility": "never",
    "terminal.integrated.tabs.location": "left",
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.showActions": "always",
    "terminal.integrated.smoothScrolling": true,
    "terminal.explorerKind": "both",
    "terminal.integrated.defaultProfile.linux": "fish",
    "terminal.integrated.tabs.hideCondition": "never",
    "github.copilot.editor.enableAutoCompletions": true,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "terminal.integrated.scrollback": 10000,
    "vscoq.path": "/home/py/.opam/coq-plugin/bin/vscoqtop",
    "vscoq.args": [
        "-I", "/home/py/coq-rango/_build/default/src",
    ],
    "files.autoSave": "afterDelay",
    "files.exclude": {
        "**.vo": true,
        "**.vok": true,
        "**.vos": true,
        "**/.aux": true,
        "**/.glob": true,
        "**/.fls": true,
    },
    "workbench.list.smoothScrolling": true,
    "vscoq.goals.auto": true,
    "vscoq.proof.mode": 1,
    "vscoq.proof.cursor.sticky": false,
    "vscoq.proof.block": false,
    "vscoq.proof.workers": 4,
    "vscoq.completion.enable": true,
    "lean4.infoview.emphasizeFirstGoal": true,
    "C_Cpp.default.cppStandard": "c++17",    
    "liveshare.allowGuestDebugControl": true,
    "liveshare.allowGuestTaskControl": true,
    "liveshare.languages.allowGuestCommandControl": true,
    "liveshare.openSharedServers": false,
    "liveshare.publishWorkspaceInfo": true,
    "latex-workshop.view.pdf.invertMode.brightness": 1.2,
    // "latex-workshop.view.pdf.invert": 0.945,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.statusBar.visible": false,
    "markdown.preview.scrollEditorWithPreview": false,
    "nrf-connect.enableTelemetry": false,
    "git.openRepositoryInParentFolders": "never",
    "wallustTheme.autoUpdate": true,
    "workbench.colorTheme": "Barbie Theme",
}